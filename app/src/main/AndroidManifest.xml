<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.dector.rkpi"
          android:versionCode="10"
          android:versionName="1.0.2"
          android:installLocation="preferExternal">

    <uses-sdk/>

    <application android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:name=".RkpiApplication">

        <!-- Activities -->

        <activity android:name="io.github.dector.rkpi.activities.MainActivity"
                  android:label="@string/main_activity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="io.github.dector.rkpi.activities.SettingsActivity"
                  android:label="@string/settings_activity"
                  android:theme="@android:style/Theme.Dialog" />

        <!-- Services -->

        <service android:name=".services.ApplicationService"/>
    </application>

    <!-- Permissions -->

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
