<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.dector.rkpi"
    android:versionCode="10"
    android:versionName="1.0.2"
    android:installLocation="preferExternal">

    <uses-sdk/>

    <!-- Permissions -->
    <uses-permission
        android:name="android.permission.INTERNET" />

    <!-- Application -->
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".RkpiApplication">

        <!-- Activities -->

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/main_activity"
            android:launchMode="singleInstance">

            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>
                <category
                    android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_activity"
            android:theme="@style/PreferencesTheme" />

        <activity
            android:name=".activities.DevSettingsActivity"
            android:label="@string/dev_settings_activity"
            android:theme="@style/PreferencesTheme" />

        <activity
            android:name=".activities.LastTracksActivity"
            android:label="@string/last_tracks_activity"
            android:theme="@style/PreferencesTheme" />

        <!-- Services -->

        <service
            android:name=".services.ApplicationService"/>

    </application>

</manifest>
